<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="order_delete" class="Risecommerce\DeleteOrders\Ui\MassAction">
                <argument name="class" xsi:type="string">Risecommerce\DeleteOrders\Ui\MassAction</argument>
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">order_delete</item>
                        <item name="label" xsi:type="string" translate="true">Delete</item>
                        <item name="url" xsi:type="url" path="deleteorders/order/massDelete"/>
                        <item name="confirm" xsi:type="array">
                            <item name="title" xsi:type="string" translate="true">Delete Order(s)</item>
                            <item name="message" xsi:type="string" translate="true">Are you sure you want to delete selected items? &lt;br&gt;
                            It will permanently delete your orders with related invoices, shipments and creditmemos.</item>
                        </item>
                    </item>
                </argument>
            </action>
        </massaction>
    </listingToolbar>
</listing>